<h1>Listando linguagens</h1>

<table>
  <tr>
    <th>Nome</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @linguagens.each do |linguagem| %>
  <tr>
    <td><%= linguagem.nome %></td>
    <td><%= link_to 'Visualizar', linguagem %></td>
    <td><%= link_to 'Editar', edit_linguagem_path(linguagem) %></td>
    <td><%= link_to 'Apagar', linguagem, confirm: 'Tem certeza?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

